{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build (GCC 15, C++20)",
      "type": "shell",
      "command": "/opt/homebrew/bin/g++-15",
      "args": [
        "-std=c++20",
        "-O2",
        "-Wall",
        "-Wextra",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": ["$gcc"]
    }
  ]
}
